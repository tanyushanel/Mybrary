<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label>
      Title
      <input type="text" name="title" value="<%= searchOptions.title %>" />
    </label>
  </div>
  <div>
    <label>
      Published After
      <input
        type="date"
        name="publishedAfter"
        value="<%= searchOptions.publishedAfter %>"
      />
    </label>
  </div>

  <label>
    Published Before
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore %>"
    />
  </label>

  <button type="submit">Search</button>
</form>
<br />
<% books.forEach(book => { %>
<p><%= book.title %></p>
<img height="150" width="100" src="<%= book.coverImagePath %>" /> <% }) %>
